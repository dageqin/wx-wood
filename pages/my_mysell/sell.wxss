/* pages/my_mysell/sell.wxss */

.part_detail{
  width: 750rpx;
  /* height: 430rpx; */
  /* padding-top: 50rpx; */
  font-size: 29rpx;
  /* border-bottom: 1px solid #e0e0e0; */
}
.part_detail .one{
  background-color: #fff;
  margin-bottom: 20rpx;
  width: 100%;
}
.part_detail .one .item_header{
  padding-top: 50rpx;
  padding-bottom: 32rpx;
  padding-left: 24rpx;
}

/* 内容区域 */
.part_detail .item_content{
  padding-bottom: 62rpx;
  padding-left: 24rpx;
}
.part_detail .item_content .img{
    float: left;
    width: 241rpx;
    height: 172rpx;
    background-color: #50ab43;
    margin-right: 31rpx;
}
.part_detail .item_content .img image{
    width: 100%;
    height: 100%;
}
.part_detail .item_content view .item{
  line-height: 44rpx;
}
.part_detail .item_content view .item .price{
  color: #f46b10;
}

/* 按钮区域 */
.part_btn{
  text-align: right;
  padding-right: 42rpx;
  border-bottom: 1px solid #e0e0e0;
  border-top: 1px solid #e0e0e0;
  padding-top: 34rpx;
  padding-bottom: 34rpx;
}
.part_btn text{
  font-size: 30rpx;
  margin-left: 20rpx;
  padding: 30rpx;
  border: 2px solid  #50ab43;
  display: inline-block;
  color: #999;
}
.part_btn .btn_long{
  display: inline-block;
  background-color: #f46b10;
  width: 106rpx;
  height:46rpx;
  border: none;
  color: #fff;
  text-align:center;
}