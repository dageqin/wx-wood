.index{
  background-color: #efeff4;
}
.index_head{
  width: 100%;
  height: 372rpx;
  line-height: 372rpx;
  background-color: #50ab43;
  font-size: 70rpx;
  text-align: center;
  color: #fff;
  position: relative;
}
.index_head_href{
    width: 180rpx;
    height: 70rpx;
    border-radius: 38rpx;
    color: #50ab43;
    background-color: #fff;
    position: absolute;
    top:31rpx;
    right:24rpx;
    font-size: 31rpx;
    text-align: center;
    line-height: 70rpx;
}
/* 详情 */
.index_detail_item{
  background-color: #fff;
  width: 750rpx;
  /* height: 430rpx; */
  margin-top: 20rpx;
  padding-top: 50rpx;
  padding-bottom: 31rpx;
}
.index_detail_item .item_header{
    position: relative;
    padding-left: 24rpx;
    padding-right: 24rpx;
}
.index_detail_item .item_header image{
   position: absolute;
   top:-50rpx;
   right: 50rpx;
   width: 60rpx;
   height: 130rpx;
}
/* detail */
.index_detail_item .item_content{
    font-size: 29rpx;
    margin-top: 31rpx;
    width: 750rpx;
    height: 240rpx;
    padding-bottom: 22rpx;
    padding-left: 24rpx;
    padding-right: 24rpx;
    border-bottom: 1px solid #e0e0e0;
}
.index_detail_item .item_content view{
   height: 40rpx;
   width: 702rpx;
   margin-bottom: 20rpx;
}

/* status、button */
.index_detail_item .item_footer{
    padding-top: 76rpx;
    padding-bottom: 28rpx;
    padding-left: 24rpx;
    padding-right: 24rpx;
    width: 750rpx;
    /* height: 180rpx; */
    /* background-color: red; */
}

/* status */
.index_detail_item .item_footer .status{
  width: 50%;
  height: 70rpx;
}
.index_detail_item .item_footer .color_text{
    color:#f46b01;
}
/* 查看详情按钮 */
.index_detail_item .item_footer .btn{
  width: 50%;
}
.index_detail_item .item_footer .btn .footer_right{
    margin-left:60rpx;
}
.index_detail_item .item_footer .btn .footer_right image{
  width: 166rpx;
  height: 69rpx;
}
/* load all */
.loadAll{
    width: 750rpx;
    padding: 42rpx 0;
    text-align: center;
    color: #999;
    font-size: 24rpx;
}






