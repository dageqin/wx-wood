/* pages/index_buy_detail/buy_detail.wxss */
.sell{
  width: 100%;
  font-size: 30rpx;
}
.content_pad{
  padding: 30rpx 24rpx;
}
.box_bot{
  margin-bottom: 30rpx;
  display:flex;
}
.box_bot input{
  width: 160rpx;
  margin-left: 40rpx;
}
.box_bot .long{
  width: 150rpx;
  border-right: 1px solid #d6d6d6;
}
/* 选择供应类型 */
.sell .sell_type{
  margin-bottom: 20rpx;
}
/* 基本信息 */
.sell .sell_basic{
  margin-bottom: 20rpx;
}
/* 求购信息 */
.sell .sell_info{
  margin-bottom: 20rpx;
}
.sell .sell_info .num_right{
  margin-left: 10rpx;
  margin-top: 10rpx;
}
.sell .sell_info view label{
  padding-top:6rpx;
}
.sell .sell_info view .address{
  width: 95%;
}
/* 安全要求 */
.sell .sell_safety{
  margin-bottom: 20rpx;
}
.sell .sell_safety .real_name{
  width: 95%;
}
.sell .sell_safety .money{
  width: 200rpx;
  border-right: 1px solid #d6d6d6;
}
.sell .sell_safety .deposit{
  background-color: #d7f2d5;
  height: 94rpx;
  line-height: 94rpx;
  width: 100%;
  margin-left: -24rpx;
}
/* 备注 */
.sell .sell_remark textarea{
  font-size: 28rpx;
  height: 200rpx;
}
.buy_checkbox{
  width: 50rpx;
  height: 50rpx;
  margin-left:360rpx;
}

.tips{
  background-color: #d7f2d5;
  height: 130rpx;
}
/* 城市控件样式 */
.picker-view {
  width: 100%;
  display: flex;
  z-index:12;
  background-color: #d6d6d6;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: fixed;
  bottom: 0rpx;
  left: 0rpx;
  height: 40vh;
}

.picker-item {
  line-height: 70rpx;
  margin-left: 5rpx;
  margin-right: 5rpx;
  text-align: center;
}